{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "scripts": {
    "dev:next": "lerna run dev --scope next-app",
    "build:next": "lerna run build --scope next-app",
    "start:next": "lerna run start --scope next-app",
    "lint:next": "lerna run lint --scope next-app",
    "prepare": "husky install",
    "storybook": "lerna run storybook --scope next-app",
    "build:storybook": "lerna run build-storybook --scope next-app",
    "generate:component": "lerna run generate:component --scope next-app",
    "generate:container": "lerna run generate:container --scope next-app",
    "generate:screen": "lerna run generate:screen --scope next-app",
    "generate:ui": "lerna run generate:ui --scope next-app",
    "generate:hook": "lerna run generate:hook --scope next-app"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^6.5.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^13.2.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0"
  }
}
